<div class="wrapper fadeInDown" id="add-product-from">
    <div id="formContent">
        <h2 class="active">Редактиране на кауза</h2>

        <form method="post" enctype="multipart/form-data">
            <input type="text" class="fadeIn second" name="name" value="{{cause.name}}" required>
            <textarea type="text" class="fadeIn third" name="description">{{cause.description}}</textarea>
            <input type="number" class="fadeIn third" name="goal" value="{{cause.goal}}" required>
            <input id="file" type="file"  name="image" accept=".jpg,.jpeg,.png">
            <label for="file" class="fadeIn third">Избери снимка</label>
            <input type="submit" class="fadeIn fourth" value="Редактирай">
        </form>
    </div>
</div>